{
  "Routes": [
    {
      "UseServiceDiscovery": true, // service discovery y�ntemini kullanaca��m� belirttim
      "ServiceName": "IdentityService", // service ismi ile art�k eri�im sa�layaca��m�z� s�yledik. (Port veya Host bilgisi yazmad�k)
      "DownstreamPathTemplate": "/api/auth",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/identity",
      "UpstreamHttpMethod": [ "Get", "Post", "Delete", "Put" ],
      "UpstreamScheme": "http",
      "SwaggerKey": "identity"
    },
    {
      "UseServiceDiscovery": true, // service discovery y�ntemini kullanaca��m� belirttim
      "ServiceName": "ProductService", // service ismi ile art�k eri�im sa�layaca��m�z� s�yledik. (Port veya Host bilgisi yazmad�k)
      "DownstreamPathTemplate": "/api/products",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/product-service",
      "UpstreamHttpMethod": [ "Get", "Post", "Delete", "Put" ],
      "UpstreamScheme": "http",
      "SwaggerKey": "product"
    }
  ],
  "SwaggerEndPoints": [
    {
      "Key": "product-service",
      "Config": [
        {
          "Name": "Product Web API",
          "Version": "v1",
          "Service": {
            "Name": "product",
            "Path": "/swagger/v1/swagger.json"
          }
        }
      ]
    },
    {
      "Key": "identity-service",
      "Config": [
        {
          "Name": "Identity Web Api",
          "Version": "v1",
          "Service": {
            "Name": "identity",
            "Path": "/swagger/v1/swagger.json"
          }
        }
      ]
    }

  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5011",
    "ServiceDiscoveryProvider": {
      "Type": "AppConfiguration"
    },
    "RateLimitOptions": {
      "DisableRateLimitHeaders": true, // X-Rate ve Retr-After başlıklarını devre dışı bırakıp bırakmayacağını belirtir.
      "QuotaExceededMessage": "API çağrıları kotası aşıldı!", // değer aşılınca dönecek olan cevap
      "HttpStatusCode": 429, // değer aşınca dönecek olan status code
      "ClientIdHeader": "x-client" // istemcileri tanımak amaçlı kullanılır default değer clientId 
    }
    //"ServiceDiscoveryProvider": { // 8500 consul default http port 8600 tcp:udp port
    //  "Host": "localhost",
    //  "Port": 8500,
    //  "Type": "Consul"
    //}
  }
}
